          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 font-sans text-sm text-background/70 transition-colors hover:text-background"
        >
          <Phone className="h-4 w-4" />
          (61) 99933-5952
        </a>
        <a
          href="https://instagram.com/psi.rhay"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 font-sans text-sm text-background/70 transition-colors hover:text-background"
        >
          <Instagram className="h-4 w-4" />
          @psi.rhay
        </a>
