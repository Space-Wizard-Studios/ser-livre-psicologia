  />

  <div class="relative mx-auto max-w-6xl px-6">
    <div class="flex flex-col items-center gap-8 md:flex-row md:justify-between">
      <div class="flex flex-col items-center gap-3 md:items-start">
        <div class="flex items-center">
          <LogoHorizontal class="h-10 w-auto text-white" />
        </div>
        <p class="font-sans text-sm text-background/50">
          Rhayane Miranda | Psicóloga Clínica | CRP 01/28820
        </p>
        <p class="font-sans text-xs text-background/40">
          Atendimento online para todo o Brasil
        </p>
      </div>

      <div class="flex flex-col items-center gap-3 md:items-end">
        <a
          href="mailto:rhayanecastro.m@gmail.com"
          class="flex items-center gap-2 font-sans text-sm text-background/70 transition-colors hover:text-background"
        >
          <Mail className="h-4 w-4" />
          rhayanecastro.m@gmail.com
        </a>
