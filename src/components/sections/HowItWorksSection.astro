---
import { MessageCircle, CalendarCheck, ThumbsUp } from 'lucide-react'

const steps = [
  {
    icon: MessageCircle,
    number: '01',
    title: 'Entre em contato',
    description: 'pelo WhatsApp',
  },
  {
    icon: CalendarCheck,
    number: '02',
    title: 'Agendamos uma sessão experimental',
    description: 'para nos conhecermos sem compromisso',
  },
  {
    icon: ThumbsUp,
    number: '03',
    title: 'Você decide',
    description: 'se quer continuar',
  },
]

const tags = ['Online', 'Individual', 'Semanal']
---

<section class="relative bg-background py-24 md:py-32" id="como-funciona">
  <div class="mx-auto max-w-6xl px-6">
    <p class="mb-3 text-center font-sans text-sm font-medium uppercase tracking-widest text-primary">
      Processo
    </p>
    <h2 class="text-center font-serif text-3xl font-medium text-foreground md:text-4xl lg:text-5xl text-balance">
      Como funciona
    </h2>

    <div class="mt-16 grid gap-8 md:grid-cols-3">
      {steps.map((step, i) => {
        const Icon = step.icon
        return (
          <div class="relative text-center">
            {i < steps.length - 1 && (
              <div class="absolute right-0 top-12 hidden h-px w-full translate-x-1/2 bg-border md:block" />
            )}
            <div class="relative mx-auto mb-6 flex h-20 w-20 items-center justify-center rounded-full bg-secondary">
              <Icon className="h-8 w-8 text-primary" />
              <span class="absolute -right-1 -top-1 flex h-7 w-7 items-center justify-center rounded-full bg-primary font-sans text-xs font-bold text-primary-foreground">
                {step.number}
              </span>
            </div>
            <h3 class="font-serif text-lg font-semibold text-foreground">{step.title}</h3>
            <p class="mt-2 font-sans text-sm text-muted-foreground">{step.description}</p>
          </div>
        )
      })}
    </div>

    <div class="mt-14 flex flex-wrap items-center justify-center gap-3">
      {tags.map((tag) => (
        <span class="rounded-full border border-border bg-card px-5 py-2 font-sans text-sm font-medium text-foreground">
          {tag}
        </span>
      ))}
    </div>
  </div>
</section>
